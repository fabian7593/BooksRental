<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    @Styles.Render("~/Content/Datatable/css")
    @Scripts.Render("~/bundles/datatable")

    @RenderSection("scripts", required: false)
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("HOME", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @if (User.IsInRole("Admin") || User.IsInRole("Renter"))
                    {
                    <li>@Html.ActionLink("Books Management", "Index", "Books")</li>
                    }
                    @if (User.IsInRole("Admin"))
                    {
                    <li>@Html.ActionLink("Account Management", "Index", "Accounts")</li>
                    <li>@Html.ActionLink("Books Genders Management", "Index", "BookGenders")</li>
                    }
                    <li>@Html.ActionLink("Shopping Cart", "Index", "ShoppingCart")</li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="javascript:;">
                            Multiple Model Examples <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu" role="menu">
                            <li>@Html.ActionLink("Doble Model Ex", "Index", "DobleModel")</li>
                            <li>@Html.ActionLink("Ajax Model Ex", "AjaxModel", "DobleModel")</li>
                        </ul>
                    </li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @if (!string.IsNullOrEmpty(ViewBag.Error))
        {
            <div class="alert alert-danger" style="margin-top:10px;" role="alert">@ViewBag.Error</div>
        }
        @if (!string.IsNullOrEmpty(ViewBag.Success))
            {
            <div class="alert alert-success" style="margin-top:10px;" role="alert">@ViewBag.Success</div>
        }
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>
</body>
</html>
